<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>it.exolab.bancaExo</groupId>
  <artifactId>ExoMusicBancaEAR</artifactId>
  <version>0.0.1-SNAPSHOT</version>
  <packaging>ear</packaging>
  <name>ExoMusicBancaEAR</name>
  
  <dependencies>
	  <dependency>
	      <groupId>it.exolab.bancaExo</groupId>
	      <artifactId>ExoMusicBancaDB</artifactId>
	      <version>0.0.1-SNAPSHOT</version>
	      <type>jar</type>
	    </dependency>	    
        <dependency>
	      <groupId>it.exolab.bancaExo</groupId>
	      <artifactId>ExoMusicBancaModel</artifactId>
	      <version>0.0.1-SNAPSHOT</version>
	      <type>jar</type>
	    </dependency>    
   	    <dependency>
	      <groupId>it.exolab.bancaExo</groupId>
	      <artifactId>ExoMusicBancaEJB</artifactId>
	      <version>0.0.1-SNAPSHOT</version>
	      <type>ejb</type>
	    </dependency>
   	    <dependency>
	      <groupId>it.exolab.bancaExo</groupId>
	      <artifactId>ExoMusicBancaWEB</artifactId>
	      <version>0.0.1-SNAPSHOT</version>
	      <type>war</type>
	    </dependency>
  
  </dependencies>
  
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-ear-plugin</artifactId>
        <version>3.0.2</version>
        <configuration>
          <earSourceDirectory>EarContent</earSourceDirectory>
          <version>8</version>
          <defaultLibBundleDir>lib</defaultLibBundleDir>
          <modules>
           <jarModule>
              <groupId>it.exolab.bancaExo</groupId>
              <artifactId>ExoMusicBancaModel</artifactId>
            </jarModule>
             <jarModule>
              <groupId>it.exolab.bancaExo</groupId>
              <artifactId>ExoMusicBancaDB</artifactId>
            </jarModule>
             <ejbModule>
              <groupId>it.exolab.bancaExo</groupId>
              <artifactId>ExoMusicBancaEJB</artifactId>
            </ejbModule>
             <webModule>
              <groupId>it.exolab.bancaExo</groupId>
              <artifactId>ExoMusicBancaWEB</artifactId>
            </webModule>
          </modules>
          
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>